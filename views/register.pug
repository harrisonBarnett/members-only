extends base-layout

block content 
    if errors
        each error in errors 
            p #{error.msg}

    form(action="/users/register" method="POST").auth-form
        p register an account
        label(for="username") username 
            input(type="text" name="username" id="username" placeholder="username") 
        
        label(for="email") email 
            input(type="email" name="email" id="email" placeholder="email") 
        
        label(for="password") password 
            input(type="password" name="password" id="password" placeholder="password")
        
        label(for="password2") confirm password
            input(type="password" name="password2" id="password2" placeholder="confirm password") 
        
        label(for="admin_check") admin status 
            input(type="checkbox" name="admin_check" id="admin_check" value="true")
        
        label(for="admin_pass") admin password
            input(type="password" name="admin_pass" id="admin_pass" placeholder="grant admin privileges") 

        button(type="submit") register

        p already have an account?
        a(href="/users/login") log in